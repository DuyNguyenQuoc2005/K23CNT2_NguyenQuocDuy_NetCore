@model NqdLesson11.Models.Category

@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout = "_NqdLayout";
}

<h2 class="text-center my-4 text-danger">
    <i class="bi bi-trash3-fill"></i> Xác Nhận Xóa Nhân Viên
</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="NqdDelete" class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <strong>Bạn có chắc chắn muốn xóa nhân viên này?</strong>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã NV</dt>
                    <dd class="col-sm-8">@Model.NqdEmpId</dd>

                    <dt class="col-sm-4">Họ Tên</dt>
                    <dd class="col-sm-8">@Model.NqdEmpName</dd>

                    <dt class="col-sm-4">Cấp Bậc</dt>
                    <dd class="col-sm-8">@Model.NqdEmpLevel</dd>

                    <dt class="col-sm-4">Ngày Vào Làm</dt>
                    <dd class="col-sm-8">@Model.NqdEmpStartDate?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Trạng Thái</dt>
                    <dd class="col-sm-8">
                        @((Model.NqdEmpStatus == true) ? "Đang Làm" : "Đã Nghỉ")

                    </dd>
                </dl>

                <input type="hidden" asp-for="NqdEmpId" />
            </div>

            <div class="card-footer d-flex justify-content-between">
                <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" />
                <a asp-action="NqdIndex" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>
