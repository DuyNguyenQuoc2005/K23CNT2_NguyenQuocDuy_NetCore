@model NqdLesson11.Models.Category

@{
    ViewData["Title"] = "Chỉnh Sửa Nhân Viên";
    Layout = "_NqdLayout";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="NqdEdit" class="card shadow-lg rounded-3">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Cập Nhật Thông Tin</h5>
            </div>

            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="NqdEmpId" type="hidden" />

                <div class="mb-3">
                    <label asp-for="NqdEmpName" class="form-label"></label>
                    <input asp-for="NqdEmpName" class="form-control" />
                    <span asp-validation-for="NqdEmpName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NqdEmpLevel" class="form-label"></label>
                    <input asp-for="NqdEmpLevel" class="form-control" />
                    <span asp-validation-for="NqdEmpLevel" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NqdEmpStartDate" class="form-label"></label>
                    <input asp-for="NqdEmpStartDate" class="form-control" type="date" />
                    <span asp-validation-for="NqdEmpStartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NqdEmpStatus" class="form-label"></label>
                    <select asp-for="NqdEmpStatus" class="form-select">
                        <option value="true" selected="@Model.NqdEmpStatus">Đang Làm</option>
                        <option value="false" selected="@(!Model.NqdEmpStatus)">Đã Nghỉ</option>
                    </select>
                    <span asp-validation-for="NqdEmpStatus" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-success" />
                <a asp-action="NqdIndex" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
